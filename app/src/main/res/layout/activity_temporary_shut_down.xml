<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0ab344"
    android:orientation="vertical"
    tools:context=".TemporaryShutDownActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickShutDown"
        android:id="@+id/shut_me"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:text="ShutDown Now"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/enable_me"
        android:onClick="onClickEnable"
        android:layout_gravity="center_horizontal"
        android:text="Enable Now"/>

</LinearLayout>